<body>
    <body>
        <div id="login" style="margin-top: 100px;">
            <div class="container">
                <div id="login-row" class="row justify-content-center align-items-center">
                    <div id="login-column" class="col-md-6">
                        <div id="login-box" class="col-md-12">
                            <form id="login-form" class="form" action="/user/login" method="POST">
                                <h3 class="text-center text-info" class="text-secondary">Login Account</h3>
                                <br>
                                <div class="form-group">
                                    <label for="email" class="text-info">Email:</label><br>
                                    <input type="text" name="email" id="email" class="form-control" required>
                                </div>
                                <div class="form-group">
                                    <label for="password" class="text-info">Password:</label><br>
                                    <input type="password" name="password" id="password" class="form-control" required>
                                </div>
                                <div class="form-group">
                                    <label for="submit" class="text-info" style="padding-top: 20px;">
                                        <input type="submit" name="submit" class="btn  btn-success btn-sm"
                                            value="Login" style="padding: 3px 30px ;">
                                </div>
                                <div id="register-link" class="text-right">
                                    <a href="registration" class="text-info">Register Here</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</body>